<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:remotecontrol="http://schemas.android.com/apk/res/com.axcoto.shinjuku.sushi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility= "visible" >
    
     <ImageView
	        android:id="@+id/playback_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:src="@drawable/playback_title" />           

     <RelativeLayout
         android:id="@+id/play_screen"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/include_background"
         android:layout_below="@id/playback_title"
         android:background="@android:color/transparent" >
         

	     <com.axcoto.shinjuku.sushi.RemoteKeyButton
	         android:id="@+id/cmd_rev"
	         android:layout_width="wrap_content"
	         android:layout_height="fill_parent"
	         android:layout_alignBottom="@id/include_background"
	         android:layout_marginLeft="2dp"
	         android:layout_marginRight="2dp"
	         android:layout_marginBottom="5dp"
	         android:background="@drawable/prev_button"
	         android:onClick="onRemoteClick"
	         android:src="@android:color/transparent"
	         remotecontrol:remote_key_name="prev" />
	     
	      <com.axcoto.shinjuku.sushi.RemoteKeyButton
	         android:id="@+id/cmd_forward"
	         android:layout_width="wrap_content"
	         android:layout_height="fill_parent"
	         android:layout_alignBottom="@id/include_background"
	         android:layout_below="@id/playback_title"
	         android:layout_marginBottom="5dp"
	         android:layout_alignParentRight="true"
	         android:layout_marginLeft="2dp"
	         android:layout_marginRight="2dp"
	         android:background="@drawable/next_button"
	         android:onClick="onRemoteClick"
	         android:src="@android:color/transparent"
	         remotecontrol:remote_key_name="next" />
	     
	      <TableLayout
	          android:id="@+id/tableLayout2"
	          android:layout_width= "fill_parent"
	          android:layout_height = "fill_parent"
	          android:layout_toLeftOf="@id/cmd_forward"
	          android:layout_marginBottom="5dp"
	          android:showDividers="beginning|middle|end"
	          android:layout_toRightOf="@id/cmd_rev">
	          
	          
	         <TableRow
	             android:id="@+id/tableRow3"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent" 
	             android:layout_marginBottom ="1dp"	             
	             android:layout_weight = "1">
			     <com.axcoto.shinjuku.sushi.RemoteKeyButton
				         android:id="@+id/cmd_pause"
				         android:layout_width="0px"
				         android:layout_height="fill_parent"
				         android:background="@drawable/pause_button"
				         android:onClick="onRemoteClick"
				         android:layout_marginRight="1dp"
				         android:layout_weight="1"
				         remotecontrol:remote_key_name="pause"	      
				         android:src="@android:color/transparent" />

			     <com.axcoto.shinjuku.sushi.RemoteKeyButton
			         android:id="@+id/cmd_play"
			         android:layout_width="0px"
			         android:layout_height="fill_parent"
			         android:layout_weight="1"
			         android:layout_marginLeft="1dp"
			         android:layout_marginRight="1dp"
			         android:background="@drawable/play_button"
			         android:onClick="onRemoteClick"
			         android:src="@android:color/transparent"
			         remotecontrol:remote_key_name="play" />
			     
			     <com.axcoto.shinjuku.sushi.RemoteKeyButton
				         android:id="@+id/cmd_stop"
				         android:layout_width="0px"
				         android:layout_height="fill_parent"
				         android:layout_weight = "1"
				         android:layout_marginLeft="1dp"
				         android:background="@drawable/stop_button"
				         android:onClick="onRemoteClick"
				         remotecontrol:remote_key_name="stop"	      
				         android:src="@android:color/transparent" />	     
		     </TableRow>
		     
	         <TableRow
	             android:id="@+id/tableRow4"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent"
	             android:layout_marginTop="1dp"
	             android:layout_weight = "1">
			     <com.axcoto.shinjuku.sushi.RemoteKeyButton
				         android:id="@+id/cmd_fast_backward"
				         android:layout_width="0px"
				         android:layout_height="fill_parent"
				         android:background="@drawable/fast_backward_button"	
				         android:onClick="onRemoteClick" 
				         android:layout_marginRight="1dp"
				         android:layout_weight = "1"
				         remotecontrol:remote_key_name="rewind"     
				         android:src="@android:color/transparent" />
			     
			     <com.axcoto.shinjuku.sushi.RemoteKeyButton
				         android:id="@+id/cmd_fast_forward"
				         android:layout_width="0px"
				         android:layout_height="fill_parent"
				         android:layout_marginLeft="1dp"
				         android:layout_weight = "1"
				         android:background="@drawable/fast_forward_button"	
				         android:onClick="onRemoteClick"
				         remotecontrol:remote_key_name="forward"      
				         android:src="@android:color/transparent" />	 
			</TableRow>    
	   	</TableLayout>
     </RelativeLayout>
     
      <ImageView
         android:id="@+id/include_background" 
         android:layout_below="@id/playback_title"   
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/background"    />
      
              
</RelativeLayout>